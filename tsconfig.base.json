      "@society/ui": ["libs/ui/src/index.ts"],
      "@society/shared/environments": ["libs/shared/environments/src/index.ts"],
      "@society/shared/models": ["libs/shared/models/src/index.ts"],
      "@society/shared/helpers/field-validations": [
        "libs/shared/helpers/field-validations/src/index.ts"
      ],
      "@society/shared/helpers/guards": [
        "libs/shared/helpers/guards/src/index.ts"
      ],
